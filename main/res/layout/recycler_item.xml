<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/recName"
            android:text="name"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/recCnic"
            android:text="CNIC"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/recName"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/recEmail"
            android:text="email"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/recCnic"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/recPhone"
            android:text="phone"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/recEmail"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/recStatus"
            android:text="Status"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/recPhone"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/hasVoted"
            android:text="Has Voted"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/recStatus"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>